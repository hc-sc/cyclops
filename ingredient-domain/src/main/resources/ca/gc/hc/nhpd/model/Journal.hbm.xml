<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="Journal" table="published_journals">
	    <cache usage="read-write"/>
		<id name="id" type="java.lang.Long" column="journal_id">
	 		<generator class="sequence">
	        	<param name="sequence">published_journals_seq</param>
	        </generator>
		</id>
		<property name="accessDate" type="date" column="journal_access_date"/>
		<property name="additionalInformationSource" type="string" length="3000" column="journal_more_info"/>
        <property name="author" type="string" length="1000" column="journal_author"/>
        <property name="category" type="string" length="500" column="journal_category"/>
        <property name="description" type="string" length="150" column="journal_desc"/>
        <property name="essn" type="string" length="10" column="journal_essn"/>
        <property name="frequency" type="string" length="150" column="journal_frequency"/>
        <property name="indexDocument" type="string" length="500" column="journal_index_doc"/>
        <property name="indexHistory" type="string" length="300" column="journal_index_history"/>
        <property name="issn" type="string" length="60" column="journal_issn"/>
        <property name="isoAbbreviation" type="string" length="100" column="journal_iso_abbrev"/>
        <property name="language" type="string" length="100" column="journal_language"/>
        <property name="notes" type="string" length="3000" column="journal_notes"/>
        <property name="publicationDates" type="string" length="1000" column="journal_pub_dates"/>
        <property name="publicationTypes" type="string" length="100" column="journal_pub_types"/>
        <property name="publisher" type="string" length="500" column="journal_publisher"/>
        <property name="pubmedId" type="string" length="10" column="journal_pubmed_id"/>
        <property name="titleAbbreviation" type="string" length="500" column="journal_title_abbrev"/>
        <property name="titles" type="string" length="1000" column="journal_titles" not-null="true"/>
        
        <property name="creationDate" type="date" column="journal_creation_date"/>
		<property name="lastUpdateDate" type="date" column="journal_lastupdate_date"/>
		<many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
		
	</class>
</hibernate-mapping>
