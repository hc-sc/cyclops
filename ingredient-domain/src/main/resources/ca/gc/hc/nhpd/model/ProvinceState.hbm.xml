<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	
    <class name="ProvinceState" table="provinces_states">
    
        <cache usage="read-write"/>
    
        <id name="id" type="java.lang.Long" column="provstate_id">
            <generator class="sequence">
                <param name="sequence">provinces_states_seq</param>
            </generator>
        </id>
        <property name="code" type="string" length="50" column="provstate_code" not-null="true"/>
        <property name="nameE" type="string" length="100" column="provstate_name_eng" not-null="true"/>
        <property name="nameF" type="string" length="100" column="provstate_name_fr" not-null="true"/>
   		<many-to-one name="country" column="country_id" not-null="true" lazy="false"/>

        <property name="creationDate" type="date" column="provstate_creation_date"/>
        <property name="lastUpdateDate" type="date" column="provstate_lastupdate_date"/>
        <many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
        
    </class>
	
</hibernate-mapping>

