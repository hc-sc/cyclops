<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
  "-//Hibernate/Hibernate Mapping DTD 3.6//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
  <class name="ApplicationText" table="application_text">
    <cache usage="read-write"/>
    <id name="id" type="java.lang.Long" column="apptext_id">
 		<generator class="sequence">
        	<param name="sequence">application_text_seq</param>
        </generator>
    </id>
    <property name="code" type="string" length="100" column="apptext_code" not-null="true"/>
    <property name="textE" type="text" length="30000" column="apptext_text_eng" not-null="true"/>
    <property name="textF" type="text" length="30000" column="apptext_text_fr" not-null="true"/>
    <property name="internalAblsMonograph" type="text" length="10" column="isInternalAbLS"/>
		
	<property name="creationDate" type="date" column="apptext_creation_date"/>
	<property name="lastUpdateDate" type="date" column="apptext_lastupdate_date"/>
	<many-to-one name="lastUpdateAccount" column="useracc_id"/>		

  </class>
</hibernate-mapping>
