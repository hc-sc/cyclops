<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- 
MonographSubIngredientDoseCombination wraps MonographSubIngredientDoses.
Contained by parent MonographDose 
-->

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="MonographSubIngredientDoseCombination" 
	       table="monograph_subing_dosecombs" lazy="false">
	    <cache usage="read-write"/>
		<id name="id" type="java.lang.Long" column="mono_subing_dosecomb_id">
	 		<generator class="sequence">
	        	<param name="sequence">monograph_subing_dosecombs_seq</param>
	        </generator>
		</id>
		<property name="code" type="string" length="20" column="code" not-null="true"/>
		
		<!-- parent MonographDose -->
        <!-- 
        <set name="parentMonographDose" table="monodose_monosubidosecombs" 
        	 inverse="true" sort="natural">
			<key column="mono_subing_dosecomb_id"/>
			<many-to-many column="monodose_id" class="MonographDose"/>
		</set>
        -->
        <set name="monographSubIngredientDoses" sort="natural" 
        	 table="monosbingdcmbs_monosbingdss" lazy="false">
		    <cache usage="read-write"/>
            <key column="mono_subing_dosecomb_id"/>
            <many-to-many column="mono_subing_dose_id" class="MonographSubIngredientDose"/>
        </set>  

		<!-- PersistentObject -->
        <property name="creationDate" type="date" column="monosingdc_creation_date"/>
        <property name="lastUpdateDate" type="date" column="monosingdc_lastupdate_date"/>
        <many-to-one name="lastUpdateAccount" column="useracc_id"/>

	</class>
</hibernate-mapping>
