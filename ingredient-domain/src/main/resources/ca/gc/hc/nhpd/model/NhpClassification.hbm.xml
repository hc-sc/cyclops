<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
  <class name="NhpClassification" table="nhp_classifications">
    <cache usage="read-write"/>
    <id name="id" type="java.lang.Long" column="nhpclass_id">
	 		<generator class="sequence">
	        	<param name="sequence">nhp_classifications_seq</param>
	        </generator>
    </id>
    <property name="code" type="string" length="20" column="nhpclass_code" not-null="true"/>
    <property name="descriptionE" type="string" length="1000" column="nhpclass_desc_eng"/>
    <property name="descriptionF" type="string" length="1000" column="nhpclass_desc_fr"/>
    <property name="manufactured" type="yes_no" column="nhpclass_manufactured_flag"/>
    <property name="nameE" type="string" length="100" column="nhpclass_name_eng" not-null="true"/>
    <property name="nameF" type="string" length="100" column="nhpclass_name_fr" not-null="true"/>
    <property name="quantityLowerTolerance" type="java.lang.Double" column="nhpclass_lower_tolerance"/>
    <property name="quantityUpperTolerance" type="java.lang.Double" column="nhpclass_upper_tolerance"/>
    <many-to-one name="quantityTestModel" column="qualitymodel_id"/>
    <set name="chemicalSubstances" sort="natural"
         table="nhp_class_ingredients">
        <cache usage="read-write"/>
        <key column="nhpclass_id"/>
        <many-to-many column="ingred_id" class="Ingredient"/>
    </set>
    <set name="chemicalImpuritySubstances" sort="natural"
         table="nhp_class_impurities">
        <cache usage="read-write"/>
        <key column="nhpclass_id"/>
        <many-to-many column="impurity_id" class="ImpuritySubstance"/>
    </set>
    <set name="identityTestMethods" sort="natural" table="nhp_class_idnt_test_methods">
        <cache usage="read-write"/>
        <key column="nhpclass_id"/>
        <many-to-many column="testmethod_id" class="TestMethod"/>
    </set>
    <set name="microbiologicalImpurities" sort="natural" table="nhp_class_bio_impurities">
        <cache usage="read-write"/>
        <key column="nhpclass_id"/>
        <many-to-many column="bioimpurity_id" class="MicrobiologicalImpurity"/>
    </set>
    <set name="quantityTestMethods" sort="natural" table="nhp_class_qty_test_methods">
        <cache usage="read-write"/>
        <key column="nhpclass_id"/>
        <many-to-many column="testmethod_id" class="TestMethod"/>
    </set>
    
    <property name="creationDate" type="date" column="nhpclass_creation_date"/>
	<property name="lastUpdateDate" type="date" column="nhpclass_lastupdate_date"/>
	<many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
  </class>
</hibernate-mapping>
