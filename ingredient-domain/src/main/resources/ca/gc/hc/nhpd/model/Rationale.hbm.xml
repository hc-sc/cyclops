<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="Rationale" table="rationales">
	    <cache usage="read-write"/>
		<id name="id" type="java.lang.Long" column="rationale_id">
	 		<generator class="sequence">
	        	<param name="sequence">rationales_seq</param>
	        </generator>
		</id>
		<property name="notesE" type="string" length="2000" column="notes_eng"/>		
		<property name="notesF" type="string" length="2000" column="notes_fr"/>
		<property name="date" type="date" column="rationale_date"/>
		<many-to-one name="reference" column="ref_id" not-null="true"/>
		
		<property name="creationDate" type="date" column="rationale_creation_date"/>
		<property name="lastUpdateDate" type="date" column="rationale_lastupdate_date"/>
		<many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
		
	</class>
</hibernate-mapping>
