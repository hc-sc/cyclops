<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
  <class name="TestMethod" table="test_methods">
    <cache usage="read-write"/>
    <id name="id" type="java.lang.Long" column="testmethod_id">
	 		<generator class="sequence">
	        	<param name="sequence">test_methods_seq</param>
	        </generator>
    </id>
    <property name="code" type="string" length="20" column="testmethod_code" not-null="true"/>
    <property name="nameE" type="string" length="100" column="testmethod_name_eng" not-null="true"/>
    <property name="nameF" type="string" length="100" column="testmethod_name_fr" not-null="true"/>
    <property name="descriptionE" type="string" length="1000" column="testmethod_desc_eng"/>
    <property name="descriptionF" type="string" length="1000" column="testmethod_desc_fr"/>
	<property name="restrictionE" type="string" length="1000" column="testmethod_restriction_eng"/>
	<property name="restrictionF" type="string" length="1000" column="testmethod_restriction_fr"/>
	
	<many-to-one name="type" column="testmthd_type_id" not-null="true" lazy="false"/>
	<many-to-one name="subtype" column="testmthd_subtype_id" not-null="true" lazy="false"/>
    <!-- 
    <set name="supportedCategories" sort="natural" table="test_method_categories">
      <key column="testmethod_id"/>
      <many-to-many column="testcat_id" class="TestCategory"/>
    </set>
    -->
    <property name="creationDate" type="date" column="testmethod_creation_date"/>
    <property name="lastUpdateDate" type="date" column="testmethod_lastupdate_date"/>
    <many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
  </class>
</hibernate-mapping>