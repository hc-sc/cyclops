<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="StandardOrGradeReference" table="standard_grade_references">
	
     	<cache usage="read-write"/>
	
		<id name="id" type="java.lang.Long" column="standgraderef_id">
	 		<generator class="sequence">
	        	<param name="sequence">standard_grade_refs_SEQ</param>
	        </generator>
		</id>
		
		<property name="homeopathicStandardOrGradeAsString" type="string" column="standgraderef_ishomeopathic" not-null="true"/>
		<property name="minimumDilutionAmount" type="java.lang.Double" column="standgraderef_min_dil_amount"/>
		<many-to-one name="reference" class="Reference" 
		             column="ref_id" not-null="true" 
		             cascade="all" unique="true" /> 
		
		<property name="creationDate" type="date" column="standgraderef_creation_date"/>
		<property name="lastUpdateDate" type="date" column="standgraderef_lastupdate_date"/>
		<many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
		
	</class>
</hibernate-mapping>

