<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
  <class name="ManufacturingProcess" table="manufact_processes">
    <cache usage="read-write"/>
    <id name="id" type="java.lang.Long" column="manproc_id">
 	 		<generator class="sequence">
	        	<param name="sequence">manufact_processes_seq</param>
	        </generator>
    </id>
    <property name="descriptionE" type="string" length="400" column="manproc_desc_eng"/>
    <property name="descriptionF" type="string" length="400" column="manproc_desc_fr"/>
    <property name="nameE" type="string" length="100" column="manproc_name_eng" not-null="true"/>
    <property name="nameF" type="string" length="100" column="manproc_name_fr" not-null="true"/>
    <property name="synthesis" type="yes_no" column="manproc_synthesis_flag"/>
    <many-to-one name="citation" column="citation_id"/>
    <many-to-one name="image" column="attachment_id"/>
    <set name="chemicalSubstances" sort="natural"
         table="manufact_process_ingredients">
        <cache usage="read-write"/>
        <key column="manproc_id"/>
        <many-to-many column="ingred_id" class="Ingredient"/>
    </set>
    <set name="chemicalImpuritySubstances" sort="natural"
         table="manufact_process_impurities">
        <cache usage="read-write"/>
        <key column="manproc_id"/>
        <many-to-many column="impurity_id" class="ImpuritySubstance"/>
    </set>
    <set name="microbiologicalImpurities" sort="natural"
         table="manufact_proc_bio_impurts">
        <cache usage="read-write"/>
        <key column="manproc_id"/>
        <many-to-many column="bioimpurity_id" class="MicrobiologicalImpurity"/>
    </set>
    
    <property name="creationDate" type="date" column="manproc_creation_date"/>
    <property name="lastUpdateDate" type="date" column="manproc_lastupdate_date"/>
    <many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
  </class>
</hibernate-mapping>
