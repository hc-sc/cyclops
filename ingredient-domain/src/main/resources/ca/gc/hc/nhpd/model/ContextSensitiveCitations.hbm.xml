<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="ContextSensitiveCitations" table="context_sensitive_citations">
	    <cache usage="read-write"/>
		<id name="id" type="java.lang.Long" column="consencit_id">
	 		<generator class="sequence">
	        	<param name="sequence">CONTEXT_SENSTVE_CITATIONS_SEQ</param>
	        </generator>
		</id>
		<property name="contextObjectId" type="long" column="context_object_id" not-null="true"/>
		<property name="contextObjectName" type="string" length="100" column="context_object_name" not-null="true"/>
		<property name="primaryObjectId" type="long" column="primary_object_id" not-null="true"/>
		<property name="primaryObjectName" type="string" length="100" column="primary_object_name" not-null="true"/>

        <set name="citations" sort="natural" table="consencit_citations" lazy="false">
              <cache usage="read-write"/>        
              <key column="consencit_id" />
              <many-to-many column="citation_id" class="Citation"/>
        </set> 
		
		<property name="creationDate" type="date" column="consencit_creation_date"/>
		<property name="lastUpdateDate" type="date" column="consencit_lastupdate_date"/>
		<many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
		
	</class>
</hibernate-mapping>

