<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="OrganismPartType" table="organism_part_types" lazy="false">
	    <cache usage="read-write"/>
		<id name="id" type="java.lang.Long" column="orgparttype_id">
	 		<generator class="sequence">
	        	<param name="sequence">organism_part_types_seq</param>
	        </generator>
		</id>
		<property name="code" type="string" length="20" column="orgparttype_code" not-null="true"/>
        <property name="descriptionE" type="string" length="1000" column="orgparttype_desc_eng"/>
        <property name="descriptionF" type="string" length="1000" column="orgparttype_desc_fr"/>
		<property name="nameE" type="string" length="100" column="orgparttype_name_eng" not-null="true"/>
		<property name="nameF" type="string" length="100" column="orgparttype_name_fr" not-null="true"/>
        <set name="synonyms" sort="natural" table="orgparttype_synonyms" lazy="false">
            <cache usage="read-write"/>
            <key column="orgparttype_id"/>
            <many-to-many column="synonym_id" unique="false" class="Synonym"/>
        </set>
        <set name="typeGroups" sort="natural" table="organism_type_grp_orgparttypes"
        	cascade="persist">
            <cache usage="read-write"/>
            <key column="orgparttype_id"/>
            <many-to-many column="orgtypegrp_id" unique="true" class="OrganismTypeGroup"/>
        </set>        
    
        <property name="creationDate" type="date" column="orgparttype_creation_date"/>
        <property name="lastUpdateDate" type="date" column="orgparttype_lastupdate_date"/>
        <many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
	</class>
</hibernate-mapping>
