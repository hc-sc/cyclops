<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="PreparationType" table="preparation_types">
	    <cache usage="read-write"/>
		<id name="id" type="java.lang.Long" column="preptype_id">
	 		<generator class="sequence">
	        	<param name="sequence">preparation_types_seq</param>
	        </generator>
		</id>
		<set name="ingredients" sort="natural" inverse="true" table="ingredient_preptypes">
            <cache usage="read-write"/>
			<key column="preptype_id"/>
			<many-to-many column="ingred_id"
				class="Ingredient"/>
		</set>
		<property name="code" type="string" length="20" column="preptype_code" not-null="true"/>
		<property name="extractAsString" type="string" column="preptype_extract" not-null="true"/>
		<property name="nameE" type="string" length="100" column="preptype_name_eng" not-null="true"/>
		<property name="nameF" type="string" length="100" column="preptype_name_fr" not-null="true"/>
		<property name="descriptionE" type="string" length="1000" column="preptype_desc_eng"/>
		<property name="descriptionF" type="string" length="1000" column="preptype_desc_fr"/>
		<property name="ratioType" type="string" length="1000" column="preptype_ratiotype"/>
		<property name="standardizedAsString" type="string" column="preptype_standardized" not-null="true"/>		
		<property name="visible" type="yes_no" column="preptype_visible"/>

        <set name="restrictedSolvents" sort="natural" table="preptypes_solvents">
          <key column="preptype_id"/>
          <many-to-many column="solvents_id" unique="true" class="Solvent"/>
        </set> 

		<property name="creationDate" type="date" column="preptype_creation_date"/>
		<property name="lastUpdateDate" type="date" column="preptype_lastupdate_date"/>
		<many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
		
	</class>
</hibernate-mapping>
