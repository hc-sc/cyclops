<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="MonographDoseCombination" table="monograph_dosecombs" lazy="false">
	    <cache usage="read-write"/>
		<id name="id" type="java.lang.Long" column="monodosecomb_id">
	 		<generator class="sequence">
	        	<param name="sequence">monograph_dosecombs_seq</param>
	        </generator>
		</id>
		
		<property name="code" type="string" length="20" column="code" not-null="true"/>
		<property name="visibleString" type="string" column="monodosecomb_visible"/>        
		
		<!-- orig mapping back to parent
		<set name="monographSharedEntries" inverse="true" sort="natural" table="mono_entry_shrd_mono_dosecombs">
			<key column="monodosecomb_id"/>
			<many-to-many column="monoent_id" class="MonographEntry"/>
		</set>
        -->
        <set name="monographEntries" inverse="true" sort="natural" table="mono_entry_mono_dosecombs">
		    <cache usage="read-write"/>
			<key column="monodosecomb_id"/>
			<many-to-many column="monoent_id" class="MonographEntry"/>
		</set>
        
        <set name="monographDoses" sort="natural" table="mono_dosecomb_mono_doses" lazy="false">
          <cache usage="read-write"/>
          <key column="monodosecomb_id"/>
          <many-to-many column="monodose_id" class="MonographDose"/>
        </set>  

		<!-- PersistentObject -->
        <property name="creationDate" type="date" column="monodosecomb_creation_date"/>
        <property name="lastUpdateDate" type="date" column="monodosecomb_lastupdate_date"/>
        <many-to-one name="lastUpdateAccount" column="useracc_id"/>
		
		<!-- DependantObject: dependencies on Uses and Source Organism Parts -->
	   	<set name="monographUses" sort="natural" table="monodosecomb_monouses" lazy="false">
	   	      <cache usage="read-write"/>
	   	      <key column="monodosecomb_id" />
    	      <many-to-many column="monouse_id" class="MonographUse" />
    	</set>
    	<set name="monographSourceOrganismParts" sort="natural" 
			table="monodosecomb_monosrcorgparts" lazy="false">
			  <cache usage="read-write"/>
			  <key column="monodosecomb_id" />
    	      <many-to-many column="monosrc_orgpart_id" class="MonographSourceOrganismPart" />
    	</set>
    	
		<!-- Joins must go at the end -->
		<!-- orig mapping back to parent 
		<join table="mono_entry_dist_mono_dosecombs" inverse="true" optional="true">
			<key column="monodosecomb_id"/>
			<many-to-one name="monographDistinctEntry" column="monoent_id"
						 not-null="true"/>
		</join>
		-->
	</class>
</hibernate-mapping>
