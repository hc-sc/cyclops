<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="PreparationRule" table="preparation_rules">
		<id name="id" type="java.lang.Long" column="preprule_id">
	 		<generator class="sequence">
	        	<param name="sequence">preparation_rules_SEQ</param>
	        </generator>
		</id>
		
		<property name="code" type="string" column="preprule_code" not-null="true"/>
		<property name="freshDryPresentAsString" type="string" column="preprule_freshdrypresent" not-null="true"/>
		<property name="quantityCrudeEquivalentPresentAsString" type="string" column="preprule_quantcrudequivpres" not-null="true"/>
		<property name="ratio" type="string" column="preprule_ratio"/>
		<property name="solventPresentAsString" type="string" column="preprule_solventpresent" not-null="true"/>
		<property name="standardizedPresentAsString" type="string" column="preprule_standardizedpresent" not-null="true"/>
						
        <set name="restrictedSolvents" sort="natural" table="preprules_solvents">
          <key column="preprule_id"/>
          <many-to-many column="solvents_id" unique="true" class="Solvent"/>
        </set> 
    
		<property name="creationDate" type="date" column="preprule_creation_date"/>
		<property name="lastUpdateDate" type="date" column="preprule_lastupdate_date"/>
		<many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
		
	</class>
</hibernate-mapping>

