<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
  <class name="TestCategory" table="test_categories">
    <cache usage="read-write"/>
    <id name="id" type="java.lang.Long" column="testcat_id">
	 		<generator class="sequence">
	        	<param name="sequence">test_categories_seq</param>
	        </generator>
    </id>
    <property name="code" type="string" length="20" column="testcat_code" not-null="true"/>
    <property name="nameE" type="string" length="100" column="testcat_name_eng" not-null="true"/>
    <property name="nameF" type="string" length="100" column="testcat_name_fr" not-null="true"/>
    <property name="descriptionE" type="string" length="1000" column="testcat_desc_eng"/>
    <property name="descriptionF" type="string" length="1000" column="testcat_desc_fr"/>

    <property name="creationDate" type="date" column="testcat_creation_date"/>
    <property name="lastUpdateDate" type="date" column="testcat_lastupdate_date"/>
    <many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
  </class>
</hibernate-mapping>
