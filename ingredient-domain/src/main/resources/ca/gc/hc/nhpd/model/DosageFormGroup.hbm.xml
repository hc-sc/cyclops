<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
  "-//Hibernate/Hibernate Mapping DTD 3.6//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
  <class name="DosageFormGroup" table="dosage_form_groups">
    <cache usage="read-write"/>
    <id name="id" type="java.lang.Long" column="dosefrmgrp_id">
	 		<generator class="sequence">
	        	<param name="sequence">dosage_form_groups_seq</param>
	        </generator>
    </id>
    <property name="code" type="string" length="20" column="dosefrmgrp_code" not-null="true"/>
    <property name="nameE" type="string" length="100" column="dosefrmgrp_name_eng" not-null="true"/>
    <property name="nameF" type="string" length="100" column="dosefrmgrp_name_fr" not-null="true"/>
    <set name="dosageForms" table="dosageform_dosageformgroups">
        <cache usage="read-write"/>    
        <key column="dosefrmgrp_id"/>
        <many-to-many column="dosefrm_id" class="DosageForm"/>
    </set>
    <map name="categoryTestSpecMap" table="dosage_form_group_test_specs">
      <cache usage="read-write"/>    
      <key column="dosefrmgrp_id" not-null="true"/>
      <map-key-many-to-many column="testcat_id" class="TestCategory"/>
      <many-to-many column="testspec_id" class="TestSpecification"/>
    </map>
    <property name="creationDate" type="date" column="dosefrmgrp_creation_date"/>
    <property name="lastUpdateDate" type="date" column="dosefrmgrp_lastupdate_date"/>
    <many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
    
  </class>
</hibernate-mapping>

