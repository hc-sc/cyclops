<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="MonographSourceOrganismPart" table="mono_source_orgparts" lazy="false">
	    <cache usage="read-write"/>
		<id name="id" type="java.lang.Long" column="mono_source_orgpart_id">
	 		<generator class="sequence">
	        	<param name="sequence">mono_source_orgparts_seq</param>
	        </generator>
		</id>
		<!-- need code? 
		<property name="code" type="string" length="20" column="code" not-null="true"/>
		-->
		  
        <many-to-one name="organismPart" column="orgpart_id" not-null="false"/>
                
        <set name="citations" sort="natural" table="mono_srcorgpart_citations">
		    <cache usage="read-write"/>
            <key column="mono_source_orgpart_id" />
            <many-to-many column="citation_id" class="Citation"/>
        </set>   
                
		<!-- PersistentObject -->
        <property name="creationDate" type="date" column="monosrcorgpart_creation_date"/>
        <property name="lastUpdateDate" type="date" column="monosrcorgpart_lastupdate_date"/>
        <many-to-one name="lastUpdateAccount" column="useracc_id"/>

        <set name="monographDoseCombinations" inverse="true" table="monodosecomb_monosrcorgparts" lazy="false">
		    <cache usage="read-write"/>
            <key column="monosrc_orgpart_id"/>
            <many-to-many column="monodosecomb_id" class="MonographDoseCombination"/>
        </set>
        
	</class>
</hibernate-mapping>
