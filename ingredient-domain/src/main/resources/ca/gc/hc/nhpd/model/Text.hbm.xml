<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="Text" table="generic_texts" lazy="false">
	    <cache usage="read-write"/>
		<id name="id" type="java.lang.Long" column="gentext_id">
	 		<generator class="sequence">
	        	<param name="sequence">generic_text_seq</param>
	        </generator>
		</id>
		<discriminator column="gentext_class_name" type="string"/>
		<property name="textE" type="string" length="1000" column="gentext_text_eng"/>
		<property name="textF" type="string" length="1000" column="gentext_text_fr"/>
		
		<property name="creationDate" type="date" column="gentext_creation_date"/>
		<property name="lastUpdateDate" type="date" column="gentext_lastupdate_date"/>
		<many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
        
		<subclass name="GenericText" discriminator-value="GenericText"/>

		<subclass name="QualifiedAssertion" discriminator-value="QualifiedAssertion">
			<set name="citationsE" sort="natural" table="generic_texts_eng_citations">
                  <cache usage="read-write"/>
	              <key column="gentext_id" />
	              <many-to-many column="citation_id" class="Citation"/>
	        </set> 
	        <set name="citationsF" sort="natural" table="generic_texts_fr_citations">
	              <cache usage="read-write"/>
	              <key column="gentext_id" />
	              <many-to-many column="citation_id" class="Citation"/>
	        </set> 
		</subclass>
	</class>
</hibernate-mapping>
