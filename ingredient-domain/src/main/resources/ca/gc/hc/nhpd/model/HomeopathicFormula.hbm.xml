<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="HomeopathicFormula" table="homeopathic_formulas">
	    <cache usage="read-write"/>
		<id name="id" type="java.lang.Long" column="homeoform_id">
	 		<generator class="sequence">
	        	<param name="sequence">homeopathic_formulas_SEQ</param>
	        </generator>
		</id>
		<property name="atfRequiredAsString" type="string" column="homeoform_atf_required" not-null="true"/>
		<property name="atfRequiredInProcessingMiAsString" type="string" column="homeoform_atf_req_in_proc_mi" not-null="true"/>
    	<property name="toxicAsString" type="string" column="homeoform_toxic" not-null="true"/>
    
        <set name="homeopathicMethodOfPreparations" sort="natural" cascade="all" inverse="true">
            <cache usage="read-write"/>        
            <key column="homeoform_id" not-null="false"/>
            <one-to-many class="HomeopathicMethodOfPreparation"/>
        </set>
          
        <many-to-one name="homeopathicRole" column="ingredrole_id" not-null="true"/>    
        <many-to-one name="homeopathicDilution" column="homeodilu_id" not-null="true"/>    
		<property name="knownAsSyntheticAsString" type="string" column="homeoform_known_as_synthetic"/>
        <property name="notes" type="string" length="500" column="homeoform_notes"/>
        <many-to-one name="reference" column="ref_id" not-null="true"/>
        <set name="sourceMaterials" sort="natural" table="homeopathic_source_mat_hgts">
          <cache usage="read-write"/>
          <key column="homeoform_id"/>
          <many-to-many column="homeogentext_id" unique="true" class="HomeopathicGenericText"/>
        </set> 
    
		<property name="creationDate" type="date" column="homeoform_creation_date"/>
		<property name="lastUpdateDate" type="date" column="homeoform_lastupdate_date"/>
		<many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
		
	</class>
</hibernate-mapping>

