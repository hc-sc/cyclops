<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="Units" table="units">
        <cache usage="read-write"/>
		<id name="id" type="java.lang.Long" column="units_id">
	 		<generator class="sequence">
	        	<param name="sequence">units_seq</param>
	        </generator>
		</id>
		<property name="code" type="string" length="50" column="units_code" not-null="true"/>
		<property name="equivalentAsString" type="string" column="units_equivalent" not-null="true"/>
		<property name="nameE" type="string" length="100" column="units_name_eng" not-null="true"/>
		<property name="nameF" type="string" length="100" column="units_name_fr" not-null="true"/>
		<property name="preferredAsString" type="string" column="units_preferred" not-null="true"/>
		<property name="ratioToBase" type="double" column="units_ratio_to_base" not-null="false"/>
		<many-to-one name="type" column="unitstype_id" not-null="true" lazy="false"/>
		
		<property name="creationDate" type="date" column="units_creation_date"/>
		<property name="lastUpdateDate" type="date" column="units_lastupdate_date"/>
		<many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
		
	</class>
</hibernate-mapping>

