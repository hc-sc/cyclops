<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="SubPopulation" table="sub_population">
	    <cache usage="read-write"/>
		<id name="id" type="java.lang.Long" column="subpop_id">
			<generator class="sequence">
                <param name="sequence">sub_population_seq</param>
       		</generator>
		</id>
		<property name="code" type="string" length="20" column="code" not-null="true"/>
		<property name="nameE" type="string" length="100" column="subpop_name_eng" not-null="true"/>
		<property name="nameF" type="string" length="100" column="subpop_name_fr" not-null="true"/>
		<property name="commentE" type="string" length="1000" column="subpop_comment_eng"/>
		<property name="commentF" type="string" length="1000" column="subpop_comment_fr"/>
		<property name="descriptionE" type="string" length="1000" column="subpop_desc_eng"/>
		<property name="descriptionF" type="string" length="1000" column="subpop_desc_fr"/>
		<property name="exclusionCriterionE" type="string" length="300" column="subpop_ex_crit_eng" not-null="true"/>
		<property name="exclusionCriterionF" type="string" length="300" column="subpop_ex_crit_fr" not-null="true"/>
		<property name="inclusionCriterionE" type="string" length="300" column="subpop_in_crit_eng" not-null="true"/>
		<property name="inclusionCriterionF" type="string" length="300" column="subpop_in_crit_fr" not-null="true"/>
		<property name="maximumAge" type="integer" column="subpop_max_age"/>
		<property name="minimumAge" type="integer" column="subpop_min_age"/>
   		<many-to-one name="maximumAgeUnits" column="units_id_max" />
		<many-to-one name="minimumAgeUnits" column="units_id_min" />	
		<property name="preferredAsString" type="string" length="1" column="subpop_preferred"/>
		<property name="creationDate" type="date" column="subpop_creation_date"/>
		<property name="lastUpdateDate" type="date" column="subpop_lastupdate_date"/>
		<many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
	</class>
</hibernate-mapping>