<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="Country" table="countries">
        <cache usage="read-write"/>
		<id name="id" type="java.lang.Long" column="country_id">
	 		<generator class="sequence">
	        	<param name="sequence">countries_seq</param>
	        </generator>
		</id>
		<property name="code" type="string" length="2" column="country_code" not-null="true"/>
		<property name="nameE" type="string" length="100" column="country_name_eng" not-null="true"/>
		<property name="nameF" type="string" length="100" column="country_name_fr" not-null="true"/>
		<many-to-one name="bseRisk" column="risk_id" not-null="true"/>
		 
		<set name="ProvincesStates" inverse="true">
            <key column="country_id"/>
            <one-to-many class="ProvinceState"/>
        </set>
         
		
		<property name="creationDate" type="date" column="country_creation_date"/>
		<property name="lastUpdateDate" type="date" column="country_lastupdate_date"/>
		<many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
		
	</class>
</hibernate-mapping>
