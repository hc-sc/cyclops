<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="MonographSubIngredientDose" table="monograph_subingdoses" lazy="false">
	    <cache usage="read-write"/>
		<id name="id" type="java.lang.Long" column="monosubingdose_id">
	 		<generator class="sequence">
	        	<param name="sequence">MONOGRAPH_SUBINGDOSES_SEQ</param>
	        </generator>
		</id>
	
		<!-- Basic Attributes -->			
    	<property name="code" type="string" length="20" column="code" not-null="true"/>					
    	<property name="doseMaximum" type="java.lang.Float" column="monosubingdose_maximum_dose"/>
        <property name="doseMinimum" type="java.lang.Float" column="monosubingdose_minimum_dose"/>
        <many-to-one name="doseUnits" column="monosubingdose_dose_units_id" not-null="false"/>
    	<property name="frequencyMaximum" type="integer" column="monosubingdose_maximum_freq"/>
        <property name="frequencyMinimum" type="integer" column="monosubingdose_minimum_freq"/>
        <many-to-one name="frequencyUnits" column="monosubingdose_freq_units_id" not-null="false"/>
        <many-to-one name="subIngredientCombination" column="monosubingcomb_id" not-null="false"/>
        
        <!-- <many-to-one name="monographDose" column="monodose_id" not-null="false"/>-->
        <!-- orig mapping back to parent 
        <set name="monographSharedDoses" inverse="true" sort="natural" table="monograph_sbngds_mndss_shrd">
			<key column="monosubingdose_id"/>
			<many-to-many column="monodose_id" class="MonographDose"/>
		</set>
		-->
		<!-- parent is now MSIDC
        <set name="monographDoses" inverse="true" sort="natural" table="monograph_subingdose_monodose">
			<key column="monosubingdose_id"/>
			<many-to-many column="monodose_id" class="MonographDose"/>
		</set>
		-->
		        
    	<many-to-one name="restrictionType" column="resttype_id" not-null="false"/>
    	
		<!-- PersistentObject -->
        <property name="creationDate" type="date" column="monosubingdose_creation_date"/>
        <property name="lastUpdateDate" type="date" column="monosubingdose_lastupdate_date"/>
        <many-to-one name="lastUpdateAccount" column="useracc_id"/>

		<!-- Joins must go at the end 
		<join table="monograph_sbngds_mndss_dist" inverse="true" optional="true">
			<key column="monosubingdose_id"/>
			<many-to-one name="monographDistinctDose" column="monodose_id"/>
		</join>
		-->
	</class>
</hibernate-mapping>
