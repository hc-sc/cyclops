<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
  <class name="ProductType" table="product_types">
    <cache usage="read-write"/>
    <id name="id" type="java.lang.Long" column="prodtype_id">
	 		<generator class="sequence">
	        	<param name="sequence">product_types_seq</param>
	        </generator>
    </id>
    <property name="code" type="string" length="20" column="prodtype_code"/>
    <property name="descriptionE" type="string" length="1000" column="prodtype_desc_eng"/>
    <property name="descriptionF" type="string" length="1000" column="prodtype_desc_fr"/>
    <property name="nameE" type="string" length="100" column="prodtype_name_eng"/>
    <property name="nameF" type="string" length="100" column="prodtype_name_fr"/>
    
    <property name="creationDate" type="date" column="prodtype_creation_date"/>
    <property name="lastUpdateDate" type="date" column="prodtype_lastupdate_date"/>
    <many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
  </class>
</hibernate-mapping>

