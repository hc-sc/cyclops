<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="MonographPreparation" table="monograph_preparations" lazy="false">
	    <cache usage="read-write"/>
		<id name="id" type="java.lang.Long" column="monoprep_id">
	 		<generator class="sequence">
	        	<param name="sequence">MONOGRAPH_PREPARATIONS_SEQ</param>
	        </generator>
		</id>
		<property name="code" type="string" length="20" column="code" not-null="true"/>
		<property name="nameE" type="string" length="150" column="monoprep_name_eng"/>
		<property name="nameF" type="string" length="150" column="monoprep_name_fr"/>
		
		<!-- Basic Attributes -->		
    	<property name="maximumExtractionRatio" type="java.lang.Float" 
    	          column="monoprep_maximum_extract_ratio"/>
        <property name="minimumExtractionRatio" type="java.lang.Float" 
                  column="monoprep_minimum_extract_ratio"/>
		<many-to-one name="preparationType" column="preptype_id"/>
		<many-to-one name="preparationTypeGroup" column="preptypegrp_id"/>

		<!-- PersistentObject -->
        <property name="creationDate" type="date" column="monoprep_creation_date"/>
        <property name="lastUpdateDate" type="date" column="monoprep_lastupdate_date"/>
        <many-to-one name="lastUpdateAccount" column="useracc_id"/>

	</class>
</hibernate-mapping>
