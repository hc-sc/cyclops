<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="MonographGroup" table="monograph_groups">
	    <cache usage="read-write"/>
		<id name="id" type="java.lang.Long" column="monogroup_id">
	 		<generator class="sequence">
	        	<param name="sequence">monograph_groups_seq</param>
	        </generator>
		</id>
		<property name="nameE" type="string" length="100" column="monogroup_name_eng" not-null="false"/>
		<property name="nameF" type="string" length="100" column="monogroup_name_fr" not-null="false"/>
		<set name="monographs" sort="natural" table="monographs">
		      <cache usage="read-write"/>
		      <key column="monogroup_id" />
              <one-to-many class="MonographGroup"/>
        </set>
		
		<property name="creationDate" type="date" column="monogroup_creation_date"/>
		<property name="lastUpdateDate" type="date" column="monogroup_lastupdate_date"/>
		<many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
		
	</class>
</hibernate-mapping>

