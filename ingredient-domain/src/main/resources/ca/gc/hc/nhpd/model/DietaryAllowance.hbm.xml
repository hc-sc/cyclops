<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="DietaryAllowance" table="dietary_allowances">
     	<cache usage="read-write"/>
		<id name="id" type="java.lang.Long" column="dietallo_id">
	 		<generator class="sequence">
	        	<param name="sequence">DIETARY_ALLOWANCES_SEQ</param>
	        </generator>
		</id>
		<property name="minimumThreshold" type="java.lang.Float" column="dietallo_min_threshold"/>
		<many-to-one name="subPopulation" column="subPop_id" not-null="true"/>
		<many-to-one name="recommendedDietaryAllowance" column="recdietallo_id" not-null="true"/>
		
		<property name="creationDate" type="date" column="dietallo_creation_date"/>
		<property name="lastUpdateDate" type="date" column="dietallo_lastupdate_date"/>
		<many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
		
	</class>
</hibernate-mapping>

