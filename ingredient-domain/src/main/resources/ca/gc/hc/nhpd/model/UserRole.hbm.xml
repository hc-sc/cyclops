<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
  <class name="UserRole" table="user_roles">
    <cache usage="read-write"/>
    <id name="id" type="java.lang.Long" column="userrole_id">
	 		<generator class="sequence">
	        	<param name="sequence">user_roles_seq</param>
	        </generator>
    </id>
    
    <property name="roleNameE" type="string" length="200" column="userrole_name_eng" not-null="true"/>
    <property name="roleNameF" type="string" length="200" column="userrole_name_fr" not-null="true"/>

	<set name="permissions" sort="natural" table="userrole_permissions">
        <cache usage="read-write"/>
        <key column="userrole_id"/>
        <many-to-many column="permission_id" class="Permission"/>
    </set>
	
	<set name="users" sort="natural" table="useraccount_userroles">
	    <cache usage="read-write"/>
	    <key column="userrole_id"/>
        <many-to-many column="useracc_id" class="UserAccount"/>
    </set>

    <property name="creationDate" type="date" column="userrole_creation_date"/>
	<property name="lastUpdateDate" type="date" column="userrole_lastupdate_date"/>
	<many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
	
  </class>
</hibernate-mapping>