<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="MonographSourceIngredient" table="mono_source_ingredients" lazy="false">
	    <cache usage="read-write"/>
		<id name="id" type="java.lang.Long" column="mono_source_ingred_id">
	 		<generator class="sequence">
	        	<param name="sequence">mono_source_ingredients_seq</param>
	        </generator>
		</id>
		<many-to-one name="ingredient" column="ingred_id"/>  
		<many-to-one name="subPopulation" column="subpop_id"/>  
	
	 	<set name="citations" sort="natural" table="mono_srcingred_citations">
		    <cache usage="read-write"/>
            <key column="mono_source_ingred_id" />
            <many-to-many column="citation_id" class="Citation"/>
        </set>   
		
		<!-- PersistentObject -->
        <property name="creationDate" type="date" column="monosrc_creation_date"/>
        <property name="lastUpdateDate" type="date" column="monosrc_lastupdate_date"/>
        <many-to-one name="lastUpdateAccount" column="useracc_id"/>
	</class>
</hibernate-mapping>
