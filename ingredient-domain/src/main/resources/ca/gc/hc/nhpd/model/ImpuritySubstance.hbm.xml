<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
  <!-- Note that lazy must be turned off for the subclassing to create proper class signatures -->
  <class name="ImpuritySubstance" table="impurities" lazy="false">
    <cache usage="read-write"/>
    <id name="id" type="java.lang.Long" column="impurity_id">
	 		<generator class="sequence">
	        	<param name="sequence">impurities_seq</param>
	        </generator>
    </id>
    <discriminator column="impurityspec_class_name" type="string"/>
    <property name="commentE" type="string" length="1000" column="impurity_comment_eng"/>
    <property name="commentF" type="string" length="1000" column="impurity_comment_fr"/>
    <property name="descriptionE" type="string" length="400" column="impurity_desc_eng"/>
    <property name="descriptionF" type="string" length="400" column="impurity_desc_fr"/>
    <property name="authorizedNameE" type="string" length="100" column="impurity_name_eng" not-null="true"/>
    <property name="authorizedNameF" type="string" length="100" column="impurity_name_fr" not-null="true"/>
    <set name="purityTestMethods" sort="natural" table="impurity_test_methods">
        <cache usage="read-write"/>
        <key column="impurity_id" not-null="true"/>
        <many-to-many column="testmethod_id" class="TestMethod"/>
    </set>
    <property name="creationDate" type="date" column="impurity_creation_date"/>
    <property name="lastUpdateDate" type="date" column="impurity_lastupdate_date"/>
    <many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
    
    <subclass name="BasicImpuritySubstance" discriminator-value="BasicImpuritySubstance"/>
    
    <subclass name="ChemicalImpuritySubstance" discriminator-value="ChemicalImpuritySubstance">
      <many-to-one name="toxicityRestriction" column="restrict_id"/>
    </subclass>
  </class>
</hibernate-mapping>