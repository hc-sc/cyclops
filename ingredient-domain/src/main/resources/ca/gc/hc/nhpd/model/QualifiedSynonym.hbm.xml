<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
  <!-- Note that lazy must be turned off for the subclassing to create proper class signatures -->
	<class name="QualifiedSynonym" table="qualified_synonyms" lazy="false">
	    <cache usage="read-write"/>
		<id name="id" type="java.lang.Long" column="qualsyno_id">
	 		<generator class="sequence">
	        	<param name="sequence">qualified_synonyms_seq</param>
	        </generator>
		</id>
		<many-to-one name="synonym" column="synonym_id"/>
		<set name="references" sort="natural" table="QualifiedSynonym_References">
            <cache usage="read-write"/>
            <key column="qualsyno_id" />
            <many-to-many  column="ref_id" class="Reference"/>
        </set> 

		<property name="creationDate" type="date" column="qualsyno_creation_date"/>
		<property name="lastUpdateDate" type="date" column="qualsyno_lastupdate_date"/>
		<many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
			
	</class>
</hibernate-mapping>