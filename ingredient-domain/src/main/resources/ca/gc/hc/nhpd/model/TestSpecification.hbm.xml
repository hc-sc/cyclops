<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
  <class name="TestSpecification" table="test_specifications">
    <cache usage="read-write"/>
    <id name="id" type="java.lang.Long" column="testspec_id">
	 		<generator class="sequence">
	        	<param name="sequence">test_specifications_seq</param>
	        </generator>
    </id>
    <property name="lowerTolerance" type="java.lang.Double" column="testspec_lower_tolerance"/>
    <property name="upperTolerance" type="java.lang.Double" column="testspec_upper_tolerance"/>
    <many-to-one name="toleranceUnits" column="units_id"/>
    <set name="toleranceTestMethods" sort="natural" table="test_spec_tst_mtds">
        <cache usage="read-write"/>
        <key column="testspec_id"/>
        <many-to-many column="testmethod_id" class="TestMethod"/>
    </set>

    <property name="creationDate" type="date" column="testspec_creation_date"/>
    <property name="lastUpdateDate" type="date" column="testspec_lastupdate_date"/>
    <many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
  </class>
</hibernate-mapping>

