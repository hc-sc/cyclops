<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="MonographPhase" table="monograph_phases" lazy="false">
	    <cache usage="read-write"/>
		<id name="id" type="java.lang.Long" column="monophase_id">
	 		<generator class="sequence">
	        	<param name="sequence">monograph_phases_seq</param>
	        </generator>
		</id>
		<property name="code" type="string" length="20" column="code" not-null="true"/>
		<property name="nameE" type="string" column="monophase_name_eng"/>
		<property name="nameF" type="string" column="monophase_name_fr"/>
		<property name="order" type="integer" column="monophase_order"/>
        
        <set name="monographDoseCombinations" sort="natural" 
             table="mono_phase_mono_dosecombs">
            <cache usage="read-write"/>
            <key column="monophase_id"/>
            <many-to-many column="monodosecomb_id" class="MonographDoseCombination"/>
        </set>  
        
        <set name="monographDurations" sort="natural"
             table="monograph_phase_mono_durations">
            <cache usage="read-write"/>
            <key column="monophase_id"/>
            <many-to-many column="monodur_id" class="MonographDuration"/>
        </set>  

		<!-- PersistentObject -->
        <property name="creationDate" type="date" column="monophase_creation_date"/>
        <property name="lastUpdateDate" type="date" column="monophase_lastupdate_date"/>
        <many-to-one name="lastUpdateAccount" column="useracc_id"/>
	</class>
</hibernate-mapping>
