<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="Taxon" table="taxa">
	    <cache usage="read-write"/>
		<id name="id" type="java.lang.Long" column="taxon_id">
	 		<generator class="sequence">
	        	<param name="sequence">taxa_seq</param>
	        </generator>
		</id>
		<property name="name" type="string" length="100" column="taxon_name" not-null="true"/>
		<many-to-one name="reference" column="ref_id" not-null="true"/>
		<many-to-one name="organism" column="organism_id" not-null="false"/>
		<property name="commentE" type="string" length="1000" column="taxon_comment_eng"/>
		<property name="commentF" type="string" length="1000" column="taxon_comment_fr"/>
			
		<property name="creationDate" type="date" column="taxon_creation_date"/>
		<property name="lastUpdateDate" type="date" column="taxon_lastupdate_date"/>
		<many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
			
	</class>
</hibernate-mapping>
