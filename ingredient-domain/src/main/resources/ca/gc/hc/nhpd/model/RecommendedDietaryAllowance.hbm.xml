<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.6//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.gc.hc.nhpd.model">
	<class name="RecommendedDietaryAllowance" table="recommended_dietary_allowances">
	
        <cache usage="read-write"/>
	
		<id name="id" type="java.lang.Long" column="recdietallo_id">
	 		<generator class="sequence">
	        	<param name="sequence">RECOMMENDED_DIETARY_ALLO_SEQ</param>
	        </generator>
		</id>
		
		<property name="code" type="string" length="20" column="recdietallo_code" not-null="true"/>
		<many-to-one name="chemicalMonographEntry" column="monoent_id" not-null="true"/>		
		<many-to-one name="units" column="units_id" not-null="true"/>		
		<many-to-one name="monographUse" column="monouse_id" 
		             unique="true" not-null="true"/>		
		<set name="dietaryAllowances" inverse="true">
            <cache usage="read-write"/>
            <key column="recdietallo_id"/>
            <one-to-many class="DietaryAllowance"/>
        </set> 
        
		<property name="creationDate" type="date" column="recdietallo_creation_date"/>
		<property name="lastUpdateDate" type="date" column="recdietallo_lastupdate_date"/>
		<many-to-one name="lastUpdateAccount" column="useracc_id" not-null="true"/>
		
	</class>
</hibernate-mapping>

